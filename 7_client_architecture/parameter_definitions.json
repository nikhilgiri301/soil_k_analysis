{
  "parameter_definitions": {
    "annual_kg_k2o_per_ha": {
      "description": "Annual potassium release from soil, expressed as K2O equivalent per hectare",
      "units": "kg K2O/ha/year",
      "typical_range": "10-150",
      "measurement_methods": [
        "sequential_extraction",
        "field_balance_studies",
        "lysimeter_analysis"
      ],
      "conversion_factors": {
        "k_to_k2o": 1.2046,
        "exchangeable_k_factor": "0.6-0.8",
        "availability_coefficient": "0.3-0.7"
      },
      "uncertainty_sources": [
        "seasonal_variation",
        "soil_heterogeneity",
        "measurement_methodology",
        "weather_effects"
      ]
    },
    "sustainability_years": {
      "description": "Number of years soil can maintain K supply without external inputs",
      "units": "years",
      "typical_range": "2-15",
      "calculation_basis": [
        "initial_k_reserves",
        "annual_depletion_rate",
        "minimum_productivity_threshold"
      ],
      "threshold_definitions": {
        "high_sustainability": ">10_years",
        "medium_sustainability": "5-10_years",
        "low_sustainability": "2-5_years",
        "unsustainable": "<2_years"
      }
    },
    "depletion_rate": {
      "description": "Rate of soil K decline under continuous cropping",
      "units": "% per year",
      "typical_range": "2-20",
      "measurement_approaches": [
        "time_series_analysis",
        "comparative_field_studies",
        "modeling_approaches"
